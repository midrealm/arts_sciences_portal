<% if current_user.admin? && @user.id != current_user.id %>
  <div class="alert alert-danger">
    <h4>You are currently in admin mode and are viewing a user other than yourself.</h4>
  </div>
<% end %>

<h1>Your preferences as a judge</h1>

<table>
  <thead>
    <tr>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @judge_preferences.each do |judge_preference| %>
      <tr>
        <td><%= judge_preference.category.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Edit preferences', new_user_judge_preference_path(@user) %>
<br><%= link_to 'Back', root_path %>
